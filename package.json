{
  "name": "maf-rest",
  "version": "0.13.0",
  "description": "http REST API handling",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf package coverage .nyc_output npm-debug.log",
    "build": "babel src --out-dir ./package --presets es2015 --source-maps",
    "build:for-test": "npm run build -- --plugins istanbul",
    "build:package-json": "node ./build/copyPackageJson",
    "dev": "npm run build:for-test -- --watch",
    "test": "npm run lint",
    "test:fast": "tap test/unit -J",
    "test:cov": "npm test -- --coverage-report=html",
    "postversion": "git push origin && git push --tags",
    "prepublish": "in-publish && echo 'use \"npm run _publish\"' && exit 1 || not-in-publish",
    "_publish": "npm run clean && npm run build && npm run build:package-json && cd ./package && npm publish",
    "pu": "npm run _publish",
    "toc": "node ./build/docToc.js",
    "lint": "eslint -c .eslintrc.js --ignore-path .gitignore .",
    "lint:fix": "npm run lint -- --fix",
    "precommit": "npm run lint",
    "prepush": "npm run lint"
  },
  "engines": {
    "node": ">=4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mafjs/rest.git"
  },
  "keywords": [
    "maf"
  ],
  "author": "alekzonder <alekzonder@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mafjs/rest/issues"
  },
  "homepage": "https://github.com/mafjs/rest#readme",
  "devDependencies": {
    "@maf/eslint-config": "^0.2.0",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.0",
    "babel-plugin-istanbul": "^4.1.4",
    "babel-preset-es2015": "^6.24.1",
    "eslint": "^4.6.1",
    "express": "^4.15.4",
    "husky": "^0.14.3",
    "in-publish": "^2.0.0",
    "maf-logger": "^0.6.1",
    "proxyquire": "^1.8.0",
    "source-map-support": "^0.4.18",
    "tap": "^10.7.2"
  },
  "dependencies": {
    "body-parser": "^1.18.1",
    "joi": "^10.6.0",
    "lodash": "^4.17.4",
    "maf-error": "^1.2.0",
    "maf-http": "^0.7.0",
    "maf-kind-of": "^0.1.0"
  },
  "nyc": {
    "all": true,
    "include": [
      "src/*.js",
      "src/methods/**/*.js"
    ]
  }
}
